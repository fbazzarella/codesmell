<% form_for @code do |f| %>
  <%= hidden_field_tag :language_slug, params[:language_slug] %>

	<fieldset>
		<legend><%= t("new.legend_title") %></legend>
		<p>
			<label><%= t("new.label_smell") %></label><br/>
			<%= f.text_area :smell %>
		</p>
		<p>
	  	<label><%= t("new.label_comment") %></label><br/>
	  	<%= f.text_field :comment %>
	  </p>
	  <p>
	  	<label><%= t("new.label_language") %></label><br/>
  	  <%= f.collection_select :language_id, @languages, :id, :name %>
		</p>

		<%= recaptcha_tags %>
		
	  <%= f.submit t("new.submit_hack"), :class => "button"%>
  </fieldset>
<% end %>